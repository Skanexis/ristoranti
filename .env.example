# Copy this file to ".env" and set real values.
# Generate admin hash:
# node scripts/generate-admin-hash.js "YourStrongPassword123!" [login]

HOST=0.0.0.0
PORT=3000
NODE_ENV=production

# Admin auth (safe mode: only salt + hash, plain password is not used)
RI_ADMIN_LOGIN=admin
RI_ADMIN_PASSWORD_SALT=replace_with_generated_salt
RI_ADMIN_PASSWORD_HASH=replace_with_generated_hash


# Telegram Mini App bot
TELEGRAM_BOT_TOKEN=replace_with_bot_token
TELEGRAM_BOT_USERNAME=replace_with_bot_username_without_at

# Public HTTPS URL (Cloudflare Tunnel URL or your domain)
WEBAPP_URL=https://bot.example.com/

# Bot mode: "polling" for local/dev, "webhook" for VPS/production
TELEGRAM_BOT_MODE=polling

# Webhook settings (used when TELEGRAM_BOT_MODE=webhook)
TELEGRAM_WEBHOOK_BASE_URL=https://bot.example.com
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=replace_with_random_secret
TELEGRAM_WEBHOOK_BIND_HOST=127.0.0.1
TELEGRAM_WEBHOOK_PORT=3099

# Optional: allow only specific Telegram user IDs (comma separated)
# TELEGRAM_ALLOWED_USER_IDS=123456789,987654321
